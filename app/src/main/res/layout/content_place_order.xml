<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev.styleomega.PlaceOrderActivity">

    <include
        layout="@layout/app_bar_main" />



    <android.support.constraint.ConstraintLayout
        android:layout_width="346dp"
        android:layout_height="476dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.942"
        app:layout_constraintHorizontal_bias="0.142">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="@string/et_name"
            android:inputType="textPersonName"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/et_cardno" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="306dp"
            android:layout_height="45dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="dd/mm/year*"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/btn_placeOrder"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="315dp"
            android:layout_height="26dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/et_address"
            app:layout_constraintVertical_bias="0.125" />

        <Button
            android:id="@+id/btn_placeOrder"
            android:layout_width="333dp"
            android:layout_height="38dp"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="order"
            android:text="@string/btn_placeOrder"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.333" />

        <EditText
            android:id="@+id/et_securityno"
            android:layout_width="308dp"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="@string/et_securityNo"
            android:inputType="number"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/et_date"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.454" />

        <EditText
            android:id="@+id/et_cardno"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="@string/et_cardNo"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/et_securityno" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="309dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="date"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/et_name"
            app:layout_constraintHorizontal_bias="0.523" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
