<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev.styleomega.MenCategoryActivity">

    <include
        layout="@layout/app_bar_main"/>

    <ScrollView
        android:layout_width="384dp"
        android:layout_height="498dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="142dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_men"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:text="MEN'S SECTION"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/backgroundViewFlipper1"
                app:layout_constraintHorizontal_bias="0.875"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/t_shirt"
                android:layout_width="171dp"
                android:layout_height="29dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:text="Shirts"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/backgroundViewFlipper2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/t_tshirt" />

            <TextView
                android:id="@+id/t_tshirt"
                android:layout_width="201dp"
                android:layout_height="23dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="8dp"
                android:text="T-Shirts"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/backgroundViewFlipper3"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="175dp" />


            <TextView
                android:id="@+id/t_pants"
                android:layout_width="158dp"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="Pants"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/backgroundViewFlipper4"
                app:layout_constraintHorizontal_bias="0.323"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/t_shorts" />


            <TextView
                android:id="@+id/t_shorts"
                android:layout_width="113dp"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="48dp"
                android:text="Shorts"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/backgroundViewFlipper5"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/t_wallet"
                android:layout_width="168dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="45dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="Wallets"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.056"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/t_tie" />

            <TextView
                android:id="@+id/t_tie"
                android:layout_width="108dp"
                android:layout_height="23dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="32dp"
                android:text="Ties"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper"
                android:layout_width="179dp"
                android:layout_height="252dp"
                android:layout_marginBottom="-20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toTopOf="@+id/t_shirt"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/backgroundViewFlipper1">

                <ImageView
                    android:id="@+id/shirt"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,shirts"
                    app:srcCompat="@drawable/shirt" />

                <ImageView
                    android:id="@+id/shirt1"
                    android:layout_width="183dp"
                    android:layout_height="260dp"
                    android:onClick="direct"
                    android:scaleType="fitXY"
                    android:tag="clothing,men,shirts"
                    app:srcCompat="@drawable/shirt1" />

            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper2"
                android:layout_width="184dp"
                android:layout_height="195dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/t_pants"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/backgroundViewFlipper3">

                <ImageView
                    android:id="@+id/pant"
                    android:layout_width="194dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,pants"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:srcCompat="@drawable/pants" />

                <ImageView
                    android:id="@+id/pant1"
                    android:layout_width="194dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,pants"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:srcCompat="@drawable/pants1" />


            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper3"
                android:layout_width="200dp"
                android:layout_height="192dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/t_shorts"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/shorts"
                    android:layout_width="353dp"
                    android:layout_height="250dp"
                    android:elevation="0dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,shorts"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.695"
                    app:srcCompat="@drawable/shorts" />

                <ImageView
                    android:id="@+id/shorts1"
                    android:layout_width="257dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,shorts"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.695"
                    app:srcCompat="@drawable/shorts1" />
            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper4"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/t_wallet"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/backgroundViewFlipper5">

                <ImageView
                    android:id="@+id/wallet1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitCenter"
                    android:tag="accessories,men,wallets"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.695"
                    app:srcCompat="@drawable/wallet1" />

                <ImageView
                    android:id="@+id/wallet"
                    android:layout_width="172dp"
                    android:layout_height="272dp"
                    android:elevation="0dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="accessories,men,wallets"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.695"
                    app:srcCompat="@drawable/wallet" />

            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/t_tie"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/tie"
                    android:layout_width="176dp"
                    android:layout_height="250dp"
                    android:elevation="0dp"
                    android:onClick="direct"
                    android:scaleType="centerInside"
                    android:tag="accessories,men,ties"
                    app:srcCompat="@drawable/tie"
                    tools:layout_editor_absoluteX="404dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/tie2"
                    android:layout_width="212dp"
                    android:layout_height="match_parent"
                    android:onClick="direct"
                    android:scaleType="fitCenter"
                    android:tag="accessories,men,ties"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.695"
                    app:srcCompat="@drawable/tie1" />

            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/backgroundViewFlipper1"
                android:layout_width="201dp"
                android:layout_height="256dp"
                android:layout_marginBottom="-1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toTopOf="@+id/t_tshirt"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="61dp">

                <ImageView
                    android:id="@+id/tshirt"
                    android:layout_width="193dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitCenter"
                    android:tag="clothing,men,tshirts"
                    app:layout_constraintVertical_bias="0.64"
                    app:srcCompat="@drawable/tshirt" />

                <ImageView
                    android:id="@+id/tshirt1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:onClick="direct"
                    android:scaleType="fitStart"
                    android:tag="clothing,men,tshirts"
                    app:layout_constraintVertical_bias="0.64"
                    app:srcCompat="@drawable/tshirt1" />

            </ViewFlipper>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
